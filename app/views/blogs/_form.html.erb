<div>
<%= form_for @blog do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>
  <br />

  <%= f.label :content %>
  <%= f.cktext_area :content, cols: 40, ckeditor: { uiColor: '#AADC6E', toolbar: 'Full', language: 'vi' } %>
  <br />

  <%= f.label :user_id %>
  <%= f.text_field :user_id, value: 1 %>
  <br />

  <%= f.submit 'submit' %>
<% end %>
</div>